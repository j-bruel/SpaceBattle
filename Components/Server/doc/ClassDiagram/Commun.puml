                    LAUNCH_GAME_RESP = 13
                    LOBBY_STATE_UPDATE_RESP = 14
                    SET_USER_BATTLESHIP_REQ = 20
                    SET_USER_BATTLESHIP_RESP = 21
                    SEND_CHAT_MSG_REQ = 22
                    BROADCAST_CHAT_MSG_REQ = 23
